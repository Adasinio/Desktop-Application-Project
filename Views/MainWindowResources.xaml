    <DataTemplate DataType="{x:Type vm1:NewDriverViewModel}">
        <vw1:NewDriver/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm1:AllDriversViewModel}">
        <vw10:AllDrivers/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm2:NewInvoiceViewModel}">
        <vw2:NewInvoice/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm2:AllInvoicesViewModel}">
        <vw11:AllInvoices/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm3:NewJobViewModel}">
        <vw3:NewJob/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm3:AllJobsViewModel}">
        <vw9:AllJobs/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm5:NewPassangerTypeViewModel}">
        <vw5:NewPassangerType/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm5:AllPassangerTypesViewModel}">
        <vw5:AllPassangerTypes/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm6:NewAdressViewModel}">
        <vw6:NewAdress/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm6:AllAdressesViewModel}">
        <vw6:AllAdresses/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm7:NewAvailabilityViewModel}">
