                    xmlns:vm13="clr-namespace:Firma_Transport.ViewModel.Workspaces.CargoTypes"
                    xmlns:vw16="clr-namespace:Firma_Transport.Views.Workspaces.CargoTypes"
                    >


    <DataTemplate DataType="{x:Type vm:NewVehicleViewModel}">
