                    xmlns:vw11="clr-namespace:Firma_Transport.Views.Workspaces.Invoices"
                    xmlns:vm9="clr-namespace:Firma_Transport.ViewModel.Workspaces.Clients"
                    xmlns:vw12="clr-namespace:Firma_Transport.Views.Workspaces.Clients"
                    xmlns:vm10="clr-namespace:Firma_Transport.ViewModel.Workspaces.NoForeignKey.DictionaryTables.VehicleTypes"
